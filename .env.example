NODE_ENV=development
TZ=Europe/Berlin

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# AI Providers (stub, openai, anthropic)
TEXT_AI_PROVIDER=openai
IMAGE_AI_PROVIDER=openai
OPENAI_API_KEY=sk-proj-your-openai-api-key

# PDF Generation
PDF_ENGINE=puppeteer

# Playwright/WhatsApp
PLAYWRIGHT_HEADLESS=false
PLAYWRIGHT_USER_DATA_DIR=./data/wa_user
WA_CHANNEL_SELECTOR_STRATEGY=aria

# Rate Limiting & Humanization
POST_MIN_GAP_MINUTES=45
POST_MAX_PER_DAY=6
HUMANIZE_TYPO_RATE=0.02
HUMANIZE_MIN_DELAY_MS=800
HUMANIZE_MAX_DELAY_MS=3500

# API
API_PORT=8080

# Safe Mode (only prepare, no auto-post)
SAFE_MODE=true

# Subdomain
RECIPE_BASE_URL=https://rezepte.famfood.app
